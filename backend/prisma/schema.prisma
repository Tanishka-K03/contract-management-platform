// ================================
// PRISMA GENERATOR & DATASOURCE
// ================================

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ================================
// ENUMS
// ================================

enum FieldType {
  TEXT
  DATE
  SIGNATURE
  CHECKBOX
}

enum ContractStatus {
  CREATED
  APPROVED
  SENT
  SIGNED
  LOCKED
  REVOKED
}

// ================================
// BLUEPRINT MODELS
// ================================

model Blueprint {
  id        String           @id @default(uuid())
  name      String
  fields    BlueprintField[]
  createdAt DateTime         @default(now())
}

model BlueprintField {
  id          String    @id @default(uuid())
  blueprintId String
  type        FieldType
  label       String
  positionX  Int
  positionY  Int

  blueprint Blueprint @relation(fields: [blueprintId], references: [id], onDelete: Cascade)
}

// ================================
// CONTRACT MODELS
// ================================

model Contract {
  id          String          @id @default(uuid())
  name        String
  blueprintId String
  status      ContractStatus  @default(CREATED)
  fields      ContractField[]
  createdAt   DateTime        @default(now())
}

model ContractField {
  id               String  @id @default(uuid())
  contractId       String
  blueprintFieldId String
  value            String?

  contract Contract @relation(fields: [contractId], references: [id], onDelete: Cascade)
}

