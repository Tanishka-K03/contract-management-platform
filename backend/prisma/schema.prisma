generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum ContractStatus {
  CREATED
  APPROVED
  SENT
  SIGNED
  LOCKED
  REVOKED
}

model Blueprint {
  id        String   @id @default(uuid())
  name      String
  fields    BlueprintField[]
  createdAt DateTime @default(now())
}

model BlueprintField {
  id          String @id @default(uuid())
  type        String
  label       String
  positionX  Int
  positionY  Int

  blueprintId String
  blueprint   Blueprint @relation(fields: [blueprintId], references: [id])
}

model Contract {
  id          String         @id @default(uuid())
  name        String
  status      ContractStatus
  blueprintId String
  fields      ContractField[]
  createdAt   DateTime       @default(now())
}

model ContractField {
  id          String @id @default(uuid())
  type        String
  label       String
  value       String?

  contractId String
  contract   Contract @relation(fields: [contractId], references: [id])
}

